{
  "compilerOptions": {
    "target": "ES2020",                         // Good for async/await & modern features
    "module": "CommonJS",                       // Use "ESNext" if you prefer ESModules
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "outDir": "dist",                           // Output folder for compiled JS
    "rootDir": "src",                           // Assumes all TS source is under /src
    "strict": true,                             // Enable type safety
    "esModuleInterop": true,                    // Allows import express from 'express'
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "scripts"],                // Include both source and scripts folder
  "exclude": ["node_modules", "dist"]
}
